@model DoAnCoSo.Models.SANPHAM

@{
    ViewBag.Title = "Themsanpham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÊM SẢN PHẨM</h2>

@using (Html.BeginForm("Themsanpham", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
                <B>TÊN BÁnH</B>
            <div class="col-md-10" style=width:30%>
                @Html.EditorFor(model => model.TEN_SP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TEN_SP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
                <b>DANH MỤC</b>
            <div class="col-md-10">
                @Html.DropDownList("MaDM")
            </div>
        </div>

        <div class="form-group">
            <b>SỐ LƯỢNG</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SOLUONG_SP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SOLUONG_SP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>ẢNH BÌA</b>
           
            <div class="col-md-10">
                <input type="file" name="fileUpload" class="btn btn-default" />
                @*Thông báo trùng*@
                @ViewBag.Thongbao
            </div>
        </div>
        <div></div>
        <div class="form-group">
            <b>MÔ TẢ</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>ĐƠN GIÁ</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GIA_SP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GIA_SP, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="THÊM MỚI" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về trang quản lý sản phẩm", "Banh")
</div>
