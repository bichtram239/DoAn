@model IEnumerable<DoAnCoSo.Models.SANPHAM>

@{
    ViewBag.Title = "Banh";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>QUẢN LÝ THÔNG TIN SẢN PHẨM</h2>

<h4>
    @Html.ActionLink("Thêm mới", "Themsanpham")
</h4>
<table class="table">
    <tr>
        <th style="text-align:center">
            TÊN SẢN PHẨM
        </th>
        <th style="text-align:center">
            MÃ DANH MỤC
        </th>
        <th style="text-align:center">
            SỐ LƯỢNG
        </th>
        <th style="text-align:center">
            ẢNH BÌA
        </th>
        <th style="text-align:center">
            MÔ TẢ
        </th>
        <th style="text-align:center">
            GIÁ SẢN PHẨM
        </th>
        <th style="text-align:center">
            CHỨC NĂNG
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.TEN_SP)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.MaDM)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.SOLUONG_SP)
        </td>
        <td style="text-align:center">
            <img src="~/img/sanpham/@item.ANHBIA" alt="" width="80" height="80"/>
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.Mota)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.GIA_SP)
        </td>
        
        <td>
            @Html.ActionLink("Sửa", "Suasanpham", new { id=item.MaSP }) |
            @Html.ActionLink("Chi tiết", "Chitietsanpham", new { id=item.MaSP }) |
            @Html.ActionLink("Xóa", "Xoasanpham", new { id=item.MaSP })
        </td>
    </tr>
}

</table>
