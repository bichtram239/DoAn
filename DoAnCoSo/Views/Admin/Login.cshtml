
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutTaikhoan.cshtml";
}

@using (Html.BeginForm())
{
    <span class="login100-form-title p-b-33">
        ĐĂNG NHẬP HỆ THỐNG QUẢN TRỊ
    </span>
    @Html.ValidationSummary(true)
    <div class="wrap-input100 validate-input" style="">

        <input class="input100" type="text" name="username" placeholder="Nhập tài khoản">
        <font color="red"> @ViewData["Loi1"]</font>

    </div>

    <div class="wrap-input100 rs1 validate-input">
        <input class="input100" type="password" name="password" placeholder="Nhập mật khẩu">
        <font color="red"> @ViewData["Loi2"]</font>
    </div>

    <div class="container-login100-form-btn m-t-20">
        <button type="submit" class="login100-form-btn"> Đăng nhập</button>

    </div>
}

